{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source": "**/*.@(jpg|jpeg|gif|png|js|css|json|svg|ico|scss|html)",
      "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
      }]
    }]
    }
}
